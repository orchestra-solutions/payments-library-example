# Orchestra API Configuration
# Copy this file to .env and fill in your values

# Your Orchestra API key (required)
# Get this from: https://portal.orchestrasolutions.com
ORCHESTRA_API_KEY=your-api-key-here

# Orchestra API base URL
# Production: https://service.pcibooking.net/api
# Sandbox: https://service.pcibooking.net/api
ORCHESTRA_API_URL=https://service.pcibooking.net/api

# Payment Gateway Account ID (required for card payments)
# This is your PSP account configured in Orchestra Portal
PAYMENT_GATEWAY_ACCOUNT_ID=your-psp-account-id

# eWallet Account IDs (optional, comma-separated)
# Include IDs for PayPal, Google Pay, Apple Pay accounts configured in Orchestra
# Example: paypal-account-1,googlepay-account-1,applepay-account-1
EWALLET_ACCOUNT_IDS=

# Mode: TEST or LIVE
# Use TEST for sandbox/testing, LIVE for production
MODE=TEST

# Server port (optional)
PORT=3000
